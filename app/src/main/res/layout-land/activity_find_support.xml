<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".api_ui.FindSupportActivity"
    android:background="@color/orange">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/passionInput"
        android:layout_marginTop="5dp"
        android:hint="interest/passion/goal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:padding="10dp"
        android:background="@drawable/black_border" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/zipInput"
        android:hint="zip"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/passionInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="@drawable/black_border" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/radiusInput"
        android:hint="distance willing to travel (in miles)"
        android:layout_marginTop="5dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/zipInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:background="@drawable/black_border" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="My Saved Meetups"
        android:id="@+id/savedMeetupsButton"
        android:background="@color/yellow"
        android:visibility="visible"
        android:layout_marginRight="75dp"
        android:layout_marginEnd="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Local Meetup Search"
        android:id="@+id/findMeetupsButton"
        android:background="@color/blue"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/savedMeetupsButton"
        android:layout_toStartOf="@+id/savedMeetupsButton" />



</RelativeLayout>
