<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_ui.ManifestActivity">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView4"
        android:src="@drawable/splash3"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="Manifest"
        android:paddingBottom="10dp"
        android:id="@+id/manifestButton"
        android:background="@drawable/blue_button"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set A Goal: &quot;I will...&quot;"
        android:id="@+id/labelGoal"
        android:background="@color/yellow"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/vision"
        android:layout_alignStart="@+id/vision"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/vision"
        android:layout_alignEnd="@+id/vision" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" android:background="@drawable/blue_border"
        android:id="@+id/vision"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:imeOptions="actionDone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why?"
        android:id="@+id/labelWhy"
        android:background="@color/yellow"
        android:textSize="20sp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/vision"
        android:layout_alignLeft="@+id/labelHow"
        android:layout_alignStart="@+id/labelHow"
        android:layout_alignRight="@+id/vision"
        android:layout_alignEnd="@+id/vision" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" android:background="@drawable/blue_border"
        android:id="@+id/why1"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/labelWhy"
        android:layout_alignLeft="@+id/labelHow"
        android:layout_alignStart="@+id/labelHow"
        android:layout_alignRight="@+id/labelWhy"
        android:layout_alignEnd="@+id/labelWhy" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" android:background="@drawable/blue_border"
        android:id="@+id/why2"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/why1"
        android:layout_alignLeft="@+id/labelHow"
        android:layout_alignStart="@+id/labelHow"
        android:layout_alignRight="@+id/why1"
        android:layout_alignEnd="@+id/why1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" android:background="@drawable/blue_border"
        android:id="@+id/why3"
        android:singleLine="true"
        android:layout_alignLeft="@+id/labelHow"
        android:layout_alignStart="@+id/labelHow"
        android:imeOptions="actionDone"
        android:layout_below="@+id/why2"
        android:layout_alignRight="@+id/why2"
        android:layout_alignEnd="@+id/why2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How"
        android:id="@+id/labelHow"
        android:background="@color/darkBlue"
        android:textSize="20sp"
        android:layout_above="@+id/how"
        android:layout_alignLeft="@+id/vision"
        android:layout_alignStart="@+id/vision"
        android:layout_alignRight="@+id/vision"
        android:layout_alignEnd="@+id/vision"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" android:background="@drawable/blue_border"
        android:id="@+id/how"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/vision"
        android:layout_alignStart="@+id/vision"
        android:layout_alignRight="@+id/vision"
        android:layout_alignEnd="@+id/vision" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="When"
        android:id="@+id/labelWhen"
        android:background="@color/yellow"
        android:textSize="20sp"
        android:layout_above="@+id/when"
        android:layout_alignLeft="@+id/labelHow"
        android:layout_alignStart="@+id/labelHow"
        android:layout_alignRight="@+id/when"
        android:layout_alignEnd="@+id/when" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="" android:background="@drawable/blue_border"
        android:id="@+id/when"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_above="@+id/manifestButton"
        android:layout_alignLeft="@+id/labelHow"
        android:layout_alignStart="@+id/labelHow"
        android:layout_alignRight="@+id/why2"
        android:layout_alignEnd="@+id/why2" />

</RelativeLayout>
