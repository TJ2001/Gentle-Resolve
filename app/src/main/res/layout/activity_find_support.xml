<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".api_ui.FindSupportActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passionInput"
        android:hint="interest/passion/goal"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zipInput"
        android:hint="zip is already provided if you inputted before, or you can use search widget"
        android:layout_marginTop="61dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/passionInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radiusInput"
        android:hint="distance willing to travel (in miles)"
        android:layout_marginTop="47dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_below="@+id/zipInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Local Meetup Search"
        android:id="@+id/findMeetupsButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="My Saved Meetups"
        android:id="@+id/savedMeetupsButton"
        android:background="@color/yellow"
        android:visibility="visible"
        android:layout_above="@+id/findMeetupsButton"
        android:layout_alignLeft="@+id/findMeetupsButton"
        android:layout_alignStart="@+id/findMeetupsButton" />

</RelativeLayout>
