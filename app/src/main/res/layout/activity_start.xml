<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_ui.StartActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievements"
        android:id="@+id/achieveButton"
        android:layout_alignParentTop="true"
        android:background="@color/yellow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/splash2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/gentle_resolve"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/orange"
        android:textColorHighlight="@color/abc_background_cache_hint_selector_material_dark" />



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:id="@+id/layoutContainer" android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.35">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.65">

            <Button
                android:layout_marginLeft="45dp"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:text="My\nTeam"
                android:textStyle="bold"
                android:id="@+id/savedSuppportButton"
                android:background="@color/yellow"
                android:visibility="visible"
                android:textColor="@color/purple" />

            <Button
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:text="Find\nSupport"
                android:id="@+id/findSupportButton"
                android:background="@color/purple"
                android:visibility="visible"
                android:textStyle="bold"
                android:layout_below="@+id/savedSuppportButton"
                android:layout_alignLeft="@+id/savedSuppportButton"
                android:layout_alignStart="@+id/savedSuppportButton"
                android:textColor="@color/yellow" />

            <Button
                android:text="In\nMotion"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:id="@+id/inMotionButton"
                android:background="@color/darkBlue"
                android:layout_width="120dp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="45dp"
                android:textColor="@color/orange" />

            <Button
                android:text="Create \nVision"
                android:id="@+id/startButton"
                android:background="@color/orange"
                android:layout_width="120dp"
                android:layout_height="75dp"
                android:layout_marginRight="45dp"
                android:textStyle="bold"
                android:layout_below="@+id/inMotionButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textColor="@color/darkBlue" />


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
