<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_ui.StartActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/achievements"
        android:id="@+id/achieveButton"
        android:layout_alignParentTop="true"
        android:background="@color/yellow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/splash2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/gentle_resolve"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="45sp"
        android:layout_below="@+id/achieveButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/orange"
        android:textColorHighlight="@color/abc_background_cache_hint_selector_material_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp">
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight=".30"
            android:text="Find\nSupport"
            android:id="@+id/findSupportButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:typeface="monospace" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight=".28"
            android:text="Saved\n Support"
            android:id="@+id/savedSuppportButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/oval"
            android:allowUndo="false"
            android:gravity="center"
            android:typeface="monospace" />
        <Button
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight=".28"
            android:text="create\nvision"
            android:id="@+id/startButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/oval"
            android:gravity="center"
            android:typeface="monospace" />
    </LinearLayout>

</RelativeLayout>
